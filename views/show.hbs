<h1>{{question.title}}</h1>
<h1>{{question.body}}</h1>

{{#each question.answers}}
<li>
    {{this.body}}
    
    <a href="/questions/edit/{{this._id}}/{{../question._id}}">EDIT</a>
</li>
{{/each}}

<form action="/questions/{{question._id}}?_method=post" method="post">
    <label for="answer">Answer</label>
    <input type="text" id="answer" name="answer" placeholder="Answer here...">
    <input type="submit" value="Submit">
</form>